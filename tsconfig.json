{
  "compilerOptions": {
    "incremental": true,                      
    "target": "es2017",                       
    "experimentalDecorators": true,           
    "emitDecoratorMetadata": true,            
    "module": "commonjs",                     
    "rootDir": "./src",                       
    "baseUrl": "./",                          
    "resolveJsonModule": true,                
    "declaration": true,                      
    "sourceMap": true,                        
    "outDir": "./dist",                       
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                           
    "noImplicitAny": true,                    
    "strictNullChecks": true,                 
    "strictBindCallApply": true,              
    "noFallthroughCasesInSwitch": true,       
    "skipLibCheck": true,                     
    "paths": {
      "@config": ["src/config/index"],
      "@repo/*": ["src/bot/services/repo/*"],
      "@utils": ["src/bot/utils"],
      "@middlewares": ["src/bot/middlewares"],
      "@types": ["src/bot/types"],
      "@service": ["src/bot/services/domain/service"],
      "@chat-gpt": ["src/bot/services/chat-gpt/chat-gpt.service"],
      "@i18n": ["src/bot/services/i18n/i18n"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
